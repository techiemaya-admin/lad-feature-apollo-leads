# ==================================================
# APOLLO LEADS - ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control
# ==================================================

# ============ ENVIRONMENT ============
NODE_ENV=development
# Options: development, staging, production

PORT=3002
# Port number for the service

LOG_LEVEL=info
# Options: debug, info, warn, error

# ============ DATABASE ============
# REQUIRED in production
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lad_production
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SCHEMA=lad_prod
# CRITICAL: Use lad_prod or appropriate schema name, NOT lad_dev

# Database Pool Settings (optional)
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=30000
DB_SSL=false
# Set to 'true' for production with SSL certificates

# Alternative: Database URL (if using connection string)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ============ APOLLO API CONFIGURATION ============
# REQUIRED in production
APOLLO_API_KEY=your_apollo_api_key_here
# Get from Apollo.io dashboard: https://apollo.io/settings/integrations

APOLLO_API_BASE_URL=https://api.apollo.io
# Apollo API base URL (default: https://api.apollo.io)

APOLLO_RATE_LIMIT_PER_HOUR=1000
# Apollo API rate limit (adjust based on your plan)

# ============ SEARCH CONFIGURATION ============
DEFAULT_SEARCH_LIMIT=100
# Default number of results per search

MAX_SEARCH_LIMIT=1000
# Maximum number of results allowed per search

SEARCH_TIMEOUT=30000
# Search timeout in milliseconds (default: 30 seconds)

# ============ DATA PROCESSING ============
LEAD_ENRICHMENT_ENABLED=true
# Enable automatic lead enrichment

DUPLICATE_DETECTION_ENABLED=true
# Enable duplicate detection

# ============ CACHING ============
CACHE_TTL_SECONDS=3600
# Cache time-to-live in seconds (default: 1 hour)

ENABLE_RESULT_CACHING=true
# Enable result caching to reduce API calls

# ============ SECURITY ============
# REQUIRED in production
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_here
# Generate: openssl rand -base64 32

CORS_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com
# REQUIRED in production - Comma-separated list of allowed origins
# NO localhost URLs in production!

# ============ RATE LIMITING ============
RATE_LIMIT_WINDOW=900000
# Rate limit window in milliseconds (default: 15 minutes)

RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# ============ DEVELOPMENT ONLY ============
# For local development:
# CORS_ORIGINS=http://localhost:3000

# WEBHOOK_BASE_URL=https://your-domain.com
# WEBHOOK_SECRET=your_webhook_secret

# Rate Limiting
# APOLLO_RATE_LIMIT_PER_MINUTE=30
# APOLLO_RETRY_ATTEMPTS=3
# APOLLO_RETRY_DELAY_MS=1000

# Cache Configuration
# ENABLE_APOLLO_CACHE=true
# CACHE_TTL_HOURS=24
# CACHE_MAX_SIZE=1000

# Apollo Credits Configuration
# APOLLO_EMAIL_REVEAL_CREDITS=1
# APOLLO_PHONE_REVEAL_CREDITS=8
# APOLLO_DIRECT_DIAL_REVEAL_CREDITS=3

# Search Limits
# MAX_SEARCH_RESULTS=1000
# DEFAULT_PAGE_SIZE=25

# Feature Flags
# ENABLE_PHONE_REVEALS=true
# ENABLE_EMAIL_REVEALS=true
# ENABLE_PYTHON_SERVICE=false
